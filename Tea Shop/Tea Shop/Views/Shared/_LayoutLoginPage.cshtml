<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Tea Shop</title>

    <link href="~/Content/CSS/Custom.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<script src="~/Scripts/jquery-3.5.1.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@

    <style>
        .field-validation-error {
            color: red;
        }

        .top-bar {
            color: white;
        }
    </style>
</head>
<body>
    <div class="container-fluid" style="position:static">
        <div class="row custCss" style="background-color:royalblue;color:black;">
            <div class="col-4">
                <ul class="navbar nav">
                    <li class="nav-item">
                        <a class="nav-link top-bar" href="/Shop/Term&Condition">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link top-bar" href="/Shop/Policies">Contact</a>
                    </li>
                </ul>
            </div>
            <div class="col-4"></div>
            <div class="col-2">
                <a class="nav-link top-bar" href="/Account/Login">
                    Login User
                    <img src="~/Image/images.png" style="height:50px;" />
                </a>
            </div>
            <div class="col-2">
                <a class="nav-link top-bar" href="/Account/SignUp">
                    Sign Up
                    <img src="~/Image/images.png" style="height:50px;" />
                </a>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-2" style="background:aqua;min-height:540px;">
                <div class="list-group" style="margin-top:20px;">
                    <a href="#" class="list-group-item">Map</a>
                    <a href="#" class="list-group-item">Item2</a>
                    <a href="#" class="list-group-item">Item3</a>
                    @RenderSection("IndexSec", false)
                    @RenderSection("ContactSec", false)
                </div>
            </div>
            <div class="col-10" style="overflow-y:auto;">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="container-fluid" style="background-color:royalblue;height:60px;position:static;">
        <footer>
            <p class="top-bar" style="margin-left:500px;">&copy; @DateTime.Now.Year -Tea Shop</p>
        </footer>
    </div>


    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
</body>
</html>