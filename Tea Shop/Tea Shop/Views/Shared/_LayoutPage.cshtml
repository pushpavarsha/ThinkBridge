<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Tea Shop</title>

    <link href="~/Content/CSS/Custom.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<script src="~/Scripts/jquery-3.5.1.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <style>
        .field-validation-error {
            color: red;
        }

        .top-bar {
            color: white;
        }
    </style>

</head>
<body>
    <div class="container-fluid" style="position:static">
        <div class="row custCss" style="background-color:royalblue;color:black;">
            <div class="col-8" style="height:60px;">
                <h2 style="margin-left:250px">Sadguru's Amrit-Tulya - Tea Shop</h2>
                @*<ul class="navbar nav">
                    <li class="nav-item">
                        <a class="nav-link top-bar" href="/Shop/Term&Condition">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link top-bar" href="/Shop/Policies">Contact</a>
                    </li>
                </ul>*@
            </div>
                     
            @if(User.Identity.IsAuthenticated)
            {
             <div class="col-4">
                 <a class="nav-link top-bar" href="/Account/LogOut">
                     LogOut
                     <img src="~/Images/Login.png" style="height:50px;width:50px;" />
                 </a>
             </div>
            }
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-2" style="background:aqua;min-height:540px;">
                <div class="list-group" style="margin-top:20px;">
                    <a href="/Account/Contact" class="list-group-item">Contact</a>
                    <a href="/Account/About" class="list-group-item">About</a>
                    <a href="/Account/Images" class="list-group-item">Images</a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        @RenderSection("LoginPage", false)
                    }
                    else
                    {
                        <a href="/Shop/GetDetails" class="list-group-item">ItemList</a>
                        <div style="visibility:hidden"> @RenderSection("LoginPage", false)</div>

                    }
                </div>
            </div>
            <div class="col-10" style="overflow-y:auto;">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="container-fluid" style="background-color:royalblue;height:60px;position:static;">
        <footer>
            <p class="top-bar" style="margin-left:500px;">&copy; @DateTime.Now.Year -Sadguru's Amrit-Tulya Tea Shop</p>
        </footer>
    </div>

   
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
</body>
</html>